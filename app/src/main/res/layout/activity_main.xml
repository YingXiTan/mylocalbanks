<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4C5459"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="50dp"
        android:text="@string/title"
        android:textColor="#EEF0F3"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textViewDBS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="50dp"
        android:textSize="20dp"
        android:textColor="#EEF0F3"
        android:text="@string/TextViewDBS" />

    <TextView
        android:id="@+id/textViewOCBC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="50dp"
        android:textSize="20dp"
        android:textColor="#EEF0F3"
        android:text="@string/TextViewOCBC" />

    <TextView
        android:id="@+id/textViewUOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="50dp"
        android:textSize="20dp"
        android:textColor="#EEF0F3"
        android:text="@string/TextViewUOB" />

</LinearLayout>